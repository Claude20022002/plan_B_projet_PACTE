# ============================================
# Configuration Base de Données MySQL
# ============================================
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=hestim_planner
DB_DIALECT=mysql
DB_PORT=3306

# ============================================
# Configuration Serveur
# ============================================
PORT=5000
NODE_ENV=development

# ============================================
# Configuration JWT (Authentification)
# ============================================
# ⚠️ IMPORTANT : Changez ce secret en production !
# Utilisez une chaîne aléatoire longue et complexe
JWT_SECRET=changez_ce_secret_en_production_avec_une_chaine_longue_et_aleatoire
JWT_EXPIRES_IN=7d

# ============================================
# Configuration Email (Optionnel)
# ============================================
# Pour utiliser Gmail
EMAIL_SERVICE=gmail
EMAIL_USER=votre_email@gmail.com
EMAIL_PASSWORD=votre_mot_de_passe_application
EMAIL_FROM=noreply@hestim.ma

# OU pour utiliser un serveur SMTP générique
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=votre_email@gmail.com
SMTP_PASSWORD=votre_mot_de_passe

# ============================================
# Configuration Base de Données (Avancé)
